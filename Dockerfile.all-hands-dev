# All-Hands.dev optimiertes Dockerfile
# Gmunden Transparenz-Datenbank

# Multi-Stage Build für optimale Performance
FROM python:3.11-slim as builder

# Metadaten für All-Hands.dev
LABEL maintainer="Gemeinde Gmunden IT-Team"
LABEL description="Gmunden Transparenz-Datenbank - KI-gestütztes Transparenz-System"
LABEL version="2.0.0"
LABEL all-hands-dev.optimized="true"
LABEL all-hands-dev.ports="12000,12001"
LABEL all-hands-dev.framework="streamlit"

# Build-Abhängigkeiten installieren
RUN apt-get update && apt-get install -y \
    build-essential \
    curl \
    software-properties-common \
    git \
    && rm -rf /var/lib/apt/lists/*

# Python-Abhängigkeiten installieren
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Produktions-Stage
FROM python:3.11-slim

# System-Abhängigkeiten für OCR und NLP
RUN apt-get update && apt-get install -y \
    tesseract-ocr \
    tesseract-ocr-deu \
    poppler-utils \
    && rm -rf /var/lib/apt/lists/*

# Python-Pakete von Builder kopieren
COPY --from=builder /usr/local/lib/python3.11/site-packages /usr/local/lib/python3.11/site-packages
COPY --from=builder /usr/local/bin /usr/local/bin

# Arbeitsverzeichnis erstellen
WORKDIR /app

# Anwendungscode kopieren
COPY . .

# All-Hands.dev spezifische Konfiguration
ENV STREAMLIT_SERVER_PORT=12000
ENV STREAMLIT_SERVER_ADDRESS=0.0.0.0
ENV STREAMLIT_SERVER_ENABLE_CORS=true
ENV STREAMLIT_SERVER_ENABLE_XSRF_PROTECTION=false
ENV STREAMLIT_BROWSER_GATHER_USAGE_STATS=false

# Weitere Umgebungsvariablen
ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1
ENV APP_ENV=production
ENV LOG_LEVEL=INFO

# Benutzer für Sicherheit erstellen
RUN useradd --create-home --shell /bin/bash app
RUN chown -R app:app /app
USER app

# Port für All-Hands.dev exponieren
EXPOSE 12000
EXPOSE 12001

# Health Check für All-Hands.dev
HEALTHCHECK --interval=30s --timeout=10s --start-period=30s --retries=3 \
    CMD curl -f http://localhost:12000/ || exit 1

# Startup-Command für All-Hands.dev
CMD ["streamlit", "run", "web/app_simple.py", \
     "--server.port", "12000", \
     "--server.address", "0.0.0.0", \
     "--server.enableCORS", "true", \
     "--server.enableXsrfProtection", "false", \
     "--browser.gatherUsageStats", "false"]